<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDTPickingSystem.MainPage"
             Title="PDT Picking System">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="📦 PDT Picking System"
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="#512BD4" />

        <Entry x:Name="ServerEntry" Placeholder="Server (e.g. 192.168.1.100)" />
        <Entry x:Name="UserEntry" Placeholder="Username" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

        <Button Text="Connect to SQL" Clicked="ConnectSql_Clicked" />

        <Label x:Name="ResultLabel"
               Text=""
               FontSize="16"
               HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>