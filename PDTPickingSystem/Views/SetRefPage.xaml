<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDTPickingSystem.Views.PickingPage"
             BackgroundColor="#F7F7F7">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">

            <!-- Page Header -->
            <Label Text="Picking System"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Department Store -->
            <VerticalStackLayout Spacing="6">
                <Label Text="Department Store" FontSize="16" />
                <Frame BackgroundColor="White" CornerRadius="10" Padding="0" HasShadow="False">
                    <Entry x:Name="txtDeptStore"
                           Placeholder="Enter Department Store"
                           FontSize="18"
                           BackgroundColor="Transparent"
                           HeightRequest="48"/>
                </Frame>
            </VerticalStackLayout>

            <!-- SO Number -->
            <VerticalStackLayout Spacing="6">
                <Label Text="SO Number" FontSize="16" />
                <Frame BackgroundColor="White" CornerRadius="10" Padding="0" HasShadow="False">
                    <Entry x:Name="txtSONumber"
                           Placeholder="Enter SO Number"
                           FontSize="18"
                           BackgroundColor="Transparent"
                           HeightRequest="48"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Barcode -->
            <VerticalStackLayout Spacing="6">
                <Label Text="Barcode" FontSize="16" />
                <Frame BackgroundColor="White" CornerRadius="10" Padding="0" HasShadow="False">
                    <Entry x:Name="txtBarcode"
                           Placeholder="Scan or enter barcode"
                           FontSize="18"
                           BackgroundColor="Transparent"
                           HeightRequest="48"/>
                </Frame>
            </VerticalStackLayout>

            <!-- SKU / Size / Color Row -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                <VerticalStackLayout Grid.Column="0" Spacing="6">
                    <Label Text="SKU" FontSize="16" />
                    <Frame BackgroundColor="White" CornerRadius="10" Padding="0" HasShadow="False">
                        <Entry x:Name="txtSKU"
                               Placeholder="SKU"
                               FontSize="18"
                               BackgroundColor="Transparent"
                               HeightRequest="48"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Spacing="6">
                    <Label Text="Size" FontSize="16" />
                    <Frame BackgroundColor="White" CornerRadius="10" Padding="0" HasShadow="False">
                        <Entry x:Name="txtSize"
                               Placeholder="Size"
                               FontSize="18"
                               BackgroundColor="Transparent"
                               HeightRequest="48"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="2" Spacing="6">
                    <Label Text="Color" FontSize="16" />
                    <Frame BackgroundColor="White" CornerRadius="10" Padding="0" HasShadow="False">
                        <Entry x:Name="txtColor"
                               Placeholder="Color"
                               FontSize="18"
                               BackgroundColor="Transparent"
                               HeightRequest="48"/>
                    </Frame>
                </VerticalStackLayout>
            </Grid>

            <!-- Brand -->
            <VerticalStackLayout Spacing="6">
                <Label Text="Brand" FontSize="16" />
                <Picker x:Name="cboBrand"
                        FontSize="18"
                        BackgroundColor="White"
                        HeightRequest="48"/>
            </VerticalStackLayout>

            <!-- Quantity -->
            <VerticalStackLayout Spacing="6">
                <Label Text="Quantity" FontSize="16" />
                <Frame BackgroundColor="White" CornerRadius="10" Padding="0" HasShadow="False">
                    <Entry x:Name="txtQty"
                           Placeholder="Qty"
                           Keyboard="Numeric"
                           FontSize="18"
                           BackgroundColor="Transparent"
                           HeightRequest="48"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12" Padding="0,10,0,0">
                <Button x:Name="btnStart"
                        Text="Start"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        FontSize="18"
                        CornerRadius="12"
                        HeightRequest="52" />
                <Button x:Name="btnSave"
                        Grid.Column="1"
                        Text="Save"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        FontSize="18"
                        CornerRadius="12"
                        HeightRequest="52" />
                <Button x:Name="btnCancel"
                        Grid.Column="2"
                        Text="Cancel"
                        BackgroundColor="#F44336"
                        TextColor="White"
                        FontSize="18"
                        CornerRadius="12"
                        HeightRequest="52" />
            </Grid>

            <!-- List of Scans -->
            <Label Text="Scanned Items"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,10,0,0" />

            <CollectionView x:Name="lstScan"
                            HeightRequest="300"
                            BackgroundColor="White"
                            Margin="0,0,0,20"
                            SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="2*,*,*" RowDefinitions="Auto" BackgroundColor="#FAFAFA">
                            <Label Text="{Binding SKU}" FontSize="16" />
                            <Label Text="{Binding Size}" FontSize="16" Grid.Column="1" />
                            <Label Text="{Binding Qty}" FontSize="16" Grid.Column="2" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
