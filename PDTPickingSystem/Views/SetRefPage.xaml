<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDTPickingSystem.Views.SetRefPage"
             Title="Set Picking Reference"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Yellow">

    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

        <!-- App Logo -->
        <Image Source="pickinglogo.png"
                   HorizontalOptions="Center"
                   HeightRequest="100"
                   WidthRequest="320"
                   Aspect="AspectFit"
                   Margin="0,-5,0,0"/>

        <!-- Page Title -->
        <Label Text="Set Picking Reference"
                   FontSize="28"
                   TextColor="#0D6EFE"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   Margin="0,-10,0,0"/>

        <!-- Input Reference Label for OnParentSet -->
        <Label x:Name="lblInputPickRef"
                   Text="Input Picking Reference #"
                   FontSize="16"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   Margin="0,0,0,0"/>

        <!-- Reference Number Entry -->
        <Entry x:Name="txtRefNo"
                   Placeholder="Enter Reference Number"
                   FontSize="18"
                   BackgroundColor="White"
                   TextColor="Black"
                   Keyboard="Numeric"
                   HorizontalOptions="Center"
                   WidthRequest="220"
                   TextChanged="TxtRefNo_TextChanged"
                   Completed="TxtRefNo_Completed"
                   Margin="0,-5,0,0" />

        <!-- Loading Indicator -->
        <ActivityIndicator x:Name="actLoading"
                   IsRunning="False"
                   IsVisible="False"
                   Color="#0D6EFE"
                   HeightRequest="30"
                   HorizontalOptions="Center"/>

        <!-- Display Reference -->
        <Label x:Name="lblRefDisplay"
                   Text="(Reference #)"
                   FontSize="15"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   Margin="0,-10,0,0"/>

        <!-- Apply / Save Button -->
        <Button x:Name="btnApply"
                    Text="Set Reference"
                    Clicked="btnApply_Clicked"
                    BackgroundColor="#0D6EFE"
                    TextColor="White"
                    Padding="0"
                    WidthRequest="220"
                    HeightRequest="50"
                    FontSize="18"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"/>

        <!-- Cancel / Back Button -->
        <Button x:Name="btnBack"
                    Text="Back to Menu"
                    Clicked="btnBack_Clicked"
                    BackgroundColor="#D83B01"
                    TextColor="White"
                    Padding="0"
                    WidthRequest="220"
                    HeightRequest="50"
                    FontSize="18"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    Margin="0,0,0,0"/>

    </VerticalStackLayout>
</ContentPage>
