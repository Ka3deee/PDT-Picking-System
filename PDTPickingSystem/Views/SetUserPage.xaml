<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDTPickingSystem.Views.SetUserPage"
             Title="Set User ID"
             NavigationPage.HasNavigationBar="True"
             BackgroundColor="Yellow">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

            <!-- App Logo -->
            <Image Source="pickinglogo.png"
                   HorizontalOptions="Center"
                   HeightRequest="100"
                   WidthRequest="320"
                   Aspect="AspectFit"
                   Margin="0,-5,0,0"/>

            <!-- Page Title -->
            <Label Text="Set User ID"
                   FontSize="28"
                   TextColor="#0D6EFE"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   Margin="0,-5,0,0"/>

            <Label x:Name="lblInputUserID"
                   Text="Input User ID:"
                   FontSize="16"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   Margin="0,-10,0,0"/>

            <!-- User ID Entry -->
            <Entry x:Name="txtEENo"
                   Placeholder="Enter User ID"
                   FontSize="18"
                   BackgroundColor="White"
                   TextColor="Black"
                   Keyboard="Numeric"
                   HorizontalOptions="Center"
                   WidthRequest="220"
                   Margin="0,-5,0,0" />

            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="actLoading"
                   IsRunning="False"
                   IsVisible="False"
                   Color="#0D6EFE"
                   HeightRequest="30"
                   HorizontalOptions="Center"/>

            <!-- Display User Name -->
            <Label x:Name="lblName"
                   Text="(Name)"
                   FontSize="15"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   Margin="0,-10,0,0"/>

            <!-- Confirm / Apply Button -->
            <Button x:Name="btnApply"
                   Text="Confirm and Apply"
                   BackgroundColor="#0D6EFE"
                   TextColor="White"
                   WidthRequest="220"
                   HeightRequest="50"
                   FontSize="18"
                   CornerRadius="10"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Back Button -->
            <Button x:Name="btnBack"
                   Text="Back to Menu"
                   BackgroundColor="#D83B01"
                   TextColor="White"
                   WidthRequest="220"
                   HeightRequest="50"
                   FontSize="18"
                   CornerRadius="10"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,0"/>

            <!-- User Info -->
            <Label x:Name="lblUser"
                   Text="User: (None)"
                   FontAttributes="Bold"
                   FontSize="16"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   Margin="0,0,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
